{% extends "layoutgeneral.html.twig" %}
{% block titre %}
    Auteurs
{% endblock %}


{% block contenu %}
    <h1>Liste d'auteurs</h1><br>

    <table class="table" border="solid">
        <thead>
        <tr>
            <th>ID</th>
            <th>Prenom Nom</th>
            <th>Sexe</th>
            <th>Date de naissance</th>
            <th>Nationalite</th>
            <th>Modification</th>
        </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nomPrenom }}</td>
                <td>{{ auteur.sexe }}</td>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ auteur.nationalite }}</td>
                <td>
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">Afficher</a>
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-primary btn-lg"><a class="text-decoration-none text-white"
                                                                href="{{ path('auteur_new') }}">Ajouter un auteur</a>
        </button>
        <br>
    </div>
{% endblock %}
